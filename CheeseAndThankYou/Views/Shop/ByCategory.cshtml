@model IEnumerable<Product>
@{
    ViewData["Title"] = "Shop for our " + @ViewData["Category"] + " Cheeses";
}

@if(Model.Count() == 0)
{
    <h1>Sorry, no products found for this category.</h1>
    return;
}

<h1>ALL of these are really good...</h1>
@*@ViewData["Category"]*@

<section class="row card-group">
    @foreach (var product in Model)
    {
        <article class="col-lg-4 mb-3">
            <div class="card mb-4 h-100">
                <div class="card-body">
                    <h4>@product.Name</h4>
                    <p>@String.Format("{0:C}", @product.Price)</p>
                    <p>@product.Description</p>
                    <p>@product.Size</p>
                    <a class="btn btn-primary">
                        Add to Cart
                    </a>
                </div>

            </div>
        </article>
    }
</section>


  

